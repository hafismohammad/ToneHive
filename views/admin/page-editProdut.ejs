<script>
    function deleteImage(prodId, image) {
        Swal.fire({
            title: "Are you sure?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: `Yes`,
            cancelButtonText: 'Cancel',
            allowOutsideClick: true,
        }).then((result) => { 
            if (result.isConfirmed) {   
                fetch(`/admin/deleteImage/${prodId}/${image}`, { method: "PATCH" })
                    .then(res => {
                        if (res.ok) {
                            Swal.fire({
                                title: `Done`,
                                text: "Image deleted successfully",
                                icon: "success",
                                timer: 1000,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: `Error`,
                                text: "Image already deleted",
                                icon: "error"
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: `Error`,
                            text: "An error occurred while deleting the image",
                            icon: "error"
                        });
                    });
            }
        });
    }
</script>
