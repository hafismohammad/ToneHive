                                    <p><span id="error2" style="display: none;" class="mt-15 err text-danger"></span>
                                    </p>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label" for="product_price">Price</label>
                                    <input value="<%= productData.price %>" type="number" placeholder="Price"
                                        name="price" class="form-control" id="price">
                                    <p><span id="error3" style="display: none;" class="mt-15 err text-danger"></span>
                                    </p>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_quantity" class="form-label">Quantity</label>
                                            <input value="<%= productData.quantity %>" type="number" name="quantity"
                                                placeholder="Quantity" class="form-control" id="quantity">
                                            <p><span id="error4" style="display: none;"
                                                    class="mt-15 err text-danger"></span></p>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="mb-4">
                                            <label for="product_discount" class="form-label">Discount</label>
                                            <input value="<%= productData.discount %>" type="number" name="discount"
                                                placeholder="%" class="form-control" id="discount">
                                            <p><span id="error5" style="display: none;"
                                                    class="mt-15 err text-danger"></span></p>
                                        </div>
                                    </div>
                                </div>

                                <% } %>

                    </div>
                </div> <!-- card end// -->
            </div>

            <div class="col-lg-3">
                <div class="card mb-4">
                    <div id="addedImagesContainer" class="col-md-6">
                        <% for (let i=0; i < productData.image.length; i++) { %>
                            <div class="col-md-12 mb-4">
                                <div class="row">
                                    <div class="col-12">
                                        <img class="rounded" style="width: 50px; height: 60px;"
                                            src="/public/uploads/<%= productData.image[i] %>" alt="image"
                                            data-filename="<%= productData.image[i] %>">
                                        <span class="delete-icon"
                                            onclick="deleteImage('<%= productData._id %>', '<%= productData.image[i] %>')">‚ùå</span>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>

                    <div class="card mb-4">
                        <!-- <div class="card-header">
                        <h4>Media</h4> 
                    </div> -->
