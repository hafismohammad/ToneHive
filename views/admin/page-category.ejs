<script>
    const catName = document.getElementById("categoryName"); 
    const error1 = document.getElementById("error1");
    const myForm = document.getElementById("myForm");
    const success = document.getElementById("success")
    const error = document.getElementById("error")

      setTimeout(() => {
        success.style.display = 'none'
      }, 2000);

      setTimeout(() => {
        error.style.display = 'none'
      }, 2000);


    function catValidation() {
        const validCat = catName.value.trim();

        if (validCat === "") {
            error1.style.display = "block";
            error1.innerHTML = "Please enter a category name"; 

            setTimeout(() => {
                error1.style.display = "none";
                error1.innerHTML = "";
            }, 3000);

            return false;
        }else if(/^(-?\d+)$/.test(validCat)){
            error1.style.display = "block";
            error1.innerHTML = "Please enter a category name without numbers"; 
            
            setTimeout(() => {
                error1.style.display = "none";
                error1.innerHTML = "";
            }, 3000);
            return false;
        }

        return true;
    }

        
    catName.addEventListener('blur', catValidation);

    myForm.addEventListener("submit", function (e) {
        // Run the category validation function and store the result
        const isCatValid = catValidation();

        // Check if category validation failed
        if (!isCatValid) {
            e.preventDefault(); // Prevent form submission if validation fails
        }
    });
</script>

