<script>

    document.getElementById('downloadBtnforXl').addEventListener('click', function () {
        var table = document.getElementById('myTable');
        var wb = XLSX.utils.table_to_book(table);
        var wbout = XLSX.write(wb, { bookType: 'xlsx', type: 'binary' });

        function s2ab(s) {
            var buf = new ArrayBuffer(s.length);
            var view = new Uint8Array(buf);
            for (var i = 0; i < s.length; i++) view[i] = s.charCodeAt(i) & 0xFF;
            return buf;
        }

        var blob = new Blob([s2ab(wbout)], { type: 'application/octet-stream' });
        saveAs(blob, 'table.xlsx');
    });

</script>

<script>
    document.getElementById('date-wise-report').addEventListener('submit', function (event) {
        event.preventDefault();

        const startingDate = document.getElementById('starting-date').value;
        const endingDate = document.getElementById('ending-date').value;
        fetch('/admin/sales-report', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ startingDate, endingDate })
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                let sales = data.sales;
                console.log("hi");
                console.log(sales);
                $('#defaultReport').empty();
                let totalRevenue = 0;
                sales.forEach((sale, index) => {
                    // Construct the HTML for each row dynamically
                    let row = `<tr>
            <td>${index + 1}</td>
            <td>${sale.orderId}</td>
            <td>${sale.userId.name}</td>
            <td>${new Date(sale.createdAt).toLocaleDateString()}</td>  <!-- Use the formatted createdAt value -->
            <td>`;
                    // Loop through products
                    sale.products.forEach(product => {
                        row += `${product.productName}<br>`;
                    });
                    row += `</td>
            <td>`;
                    // Loop through product quantities
                    sale.products.forEach(product => {
                        row += `${product.quantity}<br>`;
                    });
                    row += `</td>
            <td>${sale.paymentMethod}</td>
            <td>${sale.totalPrice}</td>
            <td>`;
                    // Loop through discounts
                    sale.products.forEach(product => {
                        row += `${product.productId.discount}<br>`;
                    });
                    row += `</td>
            <td>${sale.coupon ? sale.coupon : 'none'}</td>
        </tr>`;
                    // Append the row to the table
                    $('#defaultReport').append(row);

                    // Update total revenue
                    totalRevenue += sale.totalPrice;
                });

                // Update total revenue in the HTML
                $('#totalRevenue').text(totalRevenue);

                // Update total sales count in the HTML
                $('#totalSalesCount').text(sales.length);

                document.getElementById('salesReportStore').value = JSON.stringify(sales);
            })


            .catch(error => {
                // Handle errors
                console.error('There was a problem with the fetch operation:', error);
            });
    });
</script>