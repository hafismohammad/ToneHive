<body>

    <section class="content-main">
        <div class="row justify-content-center mt-30 ">
            
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Edit New Coupon</h4>
                    </div>
                    <div class="card-body">
                        <div class="mx-auto"> <!-- Add this div to center the form -->
                            <form id="editForm" action="/admin/editCoupon/<%= couponData._id %>" method="post">

                                <% if(couponData) {%>
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Coupon Name</label>
                                    <input value="<%= couponData.name %>" type="text" name="name" placeholder="Type here" class="form-control" id="name">
                                    <p><span id="error1" style="display: none;" class="mt-15 err text-danger"></span></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Discount Amount</label>
                                    <input value="<%= couponData.discount %>"  placeholder="Type here" name="discount" class="form-control" id="discount" rows="4"></input>
                                    <p><span id="error2" style="display: none;" class="mt-15 err text-danger"></span></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Expired On</label>
                                    <input value="<%= couponData.expiryDate.toLocaleDateString() %>"  placeholder="YYYY-MM-DD" name="expiryDate" class="form-control" id="expiryDate" rows="4" ></input>
                                    <p><span id="error3" style="display: none;" class="mt-15 err text-danger"></span></p>
                                </div>
                                
                                <button type="submit" class="btn ms-auto d-block btn-md rounded font-sm hover-up">Add Coupon</button>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>
    </section>
    

<footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
        <div class="col-sm-6">
            <script>
            document.write(new Date().getFullYear())
            </script> 
