<script>
    function changeStatus(offer_id) {
        swal.fire({
            title: "Are you sure?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Yes",
            cancelButtonText: "No",
            dangerMode: true,
        }).then((result) => {
            if (result.isConfirmed) {

                fetch(`/admin/offerStatus/${offer_id}`, { method: 'PATCH' })
                    .then((res) => {
                        if (res.ok) {
                            swal.fire({
                                title: "Successfully Done",
                                icon: "success"
                            });
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            swal.fire("Something Went Wrong");
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert("Error");
                    });
            }
        })
    }
</script>
