
<!--header--> 
<%- include('../layouts/header.ejs') %>
<!--Body-->
            <form id="regForm" class="border p-5" style="max-width:600px; margin:auto; margin-top: 200px; margin-bottom: 50px;" method="post" action="/register">
                <% if(locals.message) { %>
                    <div class="alert alert-danger">
                      <%= locals.message %>
                    </div>
                    <% } %>
                <h2 class="d-flex justify-content-center py-5">Sign up</h2>

                <div class="mb-3">
                    <input type="name" class="form-control" name="name" id="name" placeholder="Name"
                        aria-describedby="emailHelp">
                </div>
                <p><div id="error1" style="display: none;" class="alert alert-danger err"></div></p>

                <div class="mb-3">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email address"
                        aria-describedby="emailHelp">
                </div>
                <p><div id="error2" style="display: none;" class="alert alert-danger err"></div></p>


                <div class="mb-3">
                    <input type="mobile" class="form-control" name="mobile" id="mobile" placeholder="Mobile"
                        aria-describedby="emailHelp">
                </div>
                <p><div id="error3" style="display: none;" class="alert alert-danger err"></div></p>


                <div class="mb-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <p><div id="error4" style="display: none;" class="alert alert-danger err"></div></p>

               
                <div class="mt-3 d-flex justify-content-center">
                    <button type="submit" class="btn  btn-primary btn-block  btn-secondary">SIGN UP</button>
                </div>

                <div class="text-center">
                    <p>Already have an account ? <a href="/">Login</a></p>
                    </button>
                  </div>
            </form>
        </div>


        <script src="/public/formValidation/user/registerScript.js"></script>

 <!--footer-->

