<%- include('../layouts/header.ejs') %>

 <!--Body-->               
            <form id="logForm" class="border p-5" style="max-width:600px; margin:auto; margin-top: 200px; margin-bottom: 50px;" method="post" action="/">
                <h2 class="d-flex justify-content-center py-5">Login</h2>
                <% if(locals.message) { %>
                    <div class="alert alert-success">
                      <%= locals.message %>
                    </div>
                    <% } %>
                <div class="mb-3">

                    <input type="email" class="form-control" name="email" id="email" placeholder="Email address"
                        aria-describedby="emailHelp">
                </div>
                <p><div id="error1" style="display: none;" class="alert alert-danger err"></div></p>

                <div class="mb-3">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <p><div id="error2" style="display: none;" class="alert alert-danger err"></div></p>

                <h1 style="font-size: 1rem;">Forgot Password</h1>
                <div class="mt-3 d-flex justify-content-center">
                    <button type="submit" class="btn  btn-primary btn-block btn-secondary">LOGIN</button>
                </div>
                <div class="text-center">
                    <p>You dont have an accoubt yet ?<a href="/register">Sign up</a></p>
                    </button>
                  </div>
            </form>
        </div>

        <script src="/public/formValidation/user/loginScript.js"></script>

